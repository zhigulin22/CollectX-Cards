# ===========================================
# CollectX Backend Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# --------------- SERVER ---------------
NODE_ENV=development
PORT=3001

# --------------- DATABASE ---------------
# PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/collectx?schema=public"

# --------------- SECURITY ---------------
# JWT secret key (minimum 32 characters, use a random string)
# Generate with: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters"

# Admin API key for /api/admin/* endpoints (minimum 16 characters)
# Generate with: openssl rand -hex 16
ADMIN_API_KEY="your-admin-api-key-16chars"

# --------------- TELEGRAM ---------------
# Bot token from @BotFather (required for production)
TELEGRAM_BOT_TOKEN=""

# --------------- WALLET ---------------
# TON wallet address for receiving deposits
DEPOSIT_ADDRESS="EQxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Mnemonic for withdraw wallet (24 words, keep secret!)
# WITHDRAW_MNEMONIC="word1 word2 word3 ... word24"

# --------------- CORS ---------------
# Allowed origins for CORS (comma-separated, required for production)
# Example: https://your-domain.com,https://t.me
ALLOWED_ORIGINS=""

# --------------- RATE LIMITING ---------------
# Maximum requests per window (default: 100)
RATE_LIMIT_MAX=100

# Time window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW_MS=60000

# --------------- WEBHOOKS ---------------
# Secret for verifying webhook signatures (optional)
# WEBHOOK_SECRET="your-webhook-secret"
